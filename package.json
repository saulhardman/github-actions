{
  "name": "github-actions",
  "description": "A mono-repo of private GitHub Actions",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/saulhardman/github-actions.git"
  },
  "author": "Saul Hardman <hello@iamsaul.co.uk>",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prettier": "prettier '**/*.{js,yml,md}'",
    "eslint": "eslint '**/*.js'",
    "lint": "yarn prettier --check && yarn eslint --quiet",
    "lint:fix": "yarn prettier --write && yarn eslint --quiet",
    "test": "yarn lint && yarn test:packages",
    "test:watch": "jest packages --watch",
    "test:packages": "jest packages",
    "build": "lerna run build",
    "release": "yarn test && yarn build && lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.2.2",
    "lerna": "^3.22.1",
    "msw": "^0.20.4",
    "prettier": "2.0.5"
  }
}
